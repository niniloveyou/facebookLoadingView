<resources>
    <declare-styleable name="LoadingShapeView">
        <attr name="drawColor" format="color|reference"/>
        <attr name="duration" format="integer|reference"/>

        <attr name="shapeType" format="enum">
            <enum name="custom" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="rectangle" value="2"/>
            <enum name="round_rectangle" value="3"/>
        </attr>

        <attr name="animType" format="enum">
            <enum name="none" value="0"/>
            <enum name="scale" value="1"/>
            <enum name="length_scale_left" value="2"/>
            <enum name="length_scale_right" value="3"/>
        </attr>
    </declare-styleable>


</resources>
